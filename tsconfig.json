{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": [
            "es6",
            "esnext.asynciterable",
        ],
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "exclude": [
        "node_modules"
    ]
}
